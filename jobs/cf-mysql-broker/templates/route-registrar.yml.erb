<%
  def discover_external_ip
    networks = spec.networks.marshal_dump
    _, network = networks.find do |_name, network_spec|
      network_spec.default
    end
    if !network
      _, network = networks.first
    end
    if !network
      raise "Could not determine IP via network spec: #{networks}"
    end
    network.ip
  end
%>

health_checker:
  name: script
  healthcheck_script_path: /var/vcap/jobs/cf-mysql-broker/bin/healthcheck.sh

message_bus_servers:
<% p("nats.machines").each do |address| %>
  - nats://<%= p("nats.user") %>:<%= p("nats.password") %>@<%= address %>:<%= p("nats.port") %>
<% end %>

host: <%= discover_external_ip %>
update_frequency_in_seconds: <%= p("route_registrar.update_frequency_in_seconds") %>

port_map:
  - port: 80
    uris:
    - <%= p('external_host') %>
    - <%= spec.networks.send(p('network_name')).ip %>