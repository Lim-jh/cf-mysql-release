message_bus_servers:
<% p("nats.machines").each do |address| %>
  - nats://<%= p("nats.user") %>:<%= p("nats.password") %>@<%= address %>:<%= p("nats.port") %>
<% end %>

<% my_ip = spec.networks.send(p('network_name')).ip %>
<% proxy_index = p('proxy.proxy_ips').index(my_ip) %>

host: <%= my_ip %>
update_frequency_in_seconds: <%= p("route_registrar.update_frequency_in_seconds") %>

port_map:
  - port: <%= p('proxy.api_port') %>
    uris:
    - proxy-<%= proxy_index %>-<%= p('external_host') %>
